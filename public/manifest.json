{
  "manifest_version": 3,
  "name": "Productive Pause",
  "version": "1.0",
  "description": "A timer for 25 minutes of work and 5 minutes of break.",
  "permissions": ["activeTab", "alarms", "notifications"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
